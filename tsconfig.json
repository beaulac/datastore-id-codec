{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/*"
  ]
}
